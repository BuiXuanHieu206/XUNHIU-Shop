@model SV20T1020375.DomainModels.Category
﻿@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />

            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input name="@nameof(Model.CategoryName)" type="text" class="form-control" autofocus value="@Model.CategoryName">
                @Html.ValidationMessage("CategoryName", new { @style = "color:#f00"})
            </div>

            <div class="form-group">
                <label>Mô tả:</label>
                <input name="@nameof(Model.Description)" type="text" class="form-control" value="@Model.Description">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>

                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>
            <div class="form-group">
                @Html.ValidationMessage("Error", new { @style = "color:#f00"})
            </div>
        </form>
    </div>
</div>