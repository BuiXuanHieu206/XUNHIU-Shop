@model SV20T1020375.DomainModels.Supplier
﻿@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />

            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input name="@nameof(Model.SupplierName)" type="text" class="form-control" autofocus value="@Model.SupplierName">
                @Html.ValidationMessage("SupplierName", new { @style = "color:#f00"})
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input name="@nameof(Model.ContactName)" type="text" class="form-control" value="@Model.ContactName">
                @Html.ValidationMessage("ContactName", new { @style = "color:#f00"})
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input name="@nameof(Model.Phone)" type="text" class="form-control" value="@Model.Phone">
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input name="@nameof(Model.Email)" type="email" class="form-control" value="@Model.Email">
                @Html.ValidationMessage("Email", new { @style = "color:#f00"})
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input name="@nameof(Model.Address)" type="text" class="form-control" value="@Model.Address">
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                @* <select class="form-control" name="@nameof(Model.Province)">
                    <option>-- Chọn tỉnh/thành --</option>
                    @foreach (var item in SV20T1020375.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }
                </select> *@
                @Html.DropDownListFor(m => m.Province, SelectListHelper.Provinces(), new { @class="form-control"})
                @Html.ValidationMessage("Province", new { @style = "color:#f00"})
            </div>

            <div class="form-group">
                <label>Ngày thành lập:</label>
                    <input type="hidden" class="form-control" name="@nameof(Model.BirthDate)" value="@Model.BirthDate" />
                    <input type="text" class="form-control date-picker" name="birthDateInput"
                           value="@Model.BirthDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))" />
                    @Html.ValidationMessageFor(m=>m.BirthDate, "", new { @style = "color:#f00"})
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>

                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
            <div class="form-group">
                @Html.ValidationMessage("Error", new { @style = "color:#f00"})
            </div>
        </form>
    </div>
</div>